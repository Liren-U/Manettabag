---
// src/pages/index.astro
import Header from '../components/Header.astro';
import HeroBanner from '../components/HeroBanner.astro';
import ImageGrid from '../components/ImageGrid.astro';
import ImageCarouselSplit from '../components/ImageCarouselSplit.astro';
import ImageGridSix from '../components/ImageGridSix.astro';
import SimpleTitleModule from '../components/SimpleTitleModule.astro';
import FullWidthBanner from '../components/FullWidthBanner.astro';
import KlaviyoFormModule from '../components/Klaviyo.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import ImageGridSix1 from '../components/ImageGridSix1.astro';

// 确保您的背景图文件存在于 public/images/ 目录下
// 关键：这些变量必须在 head 中被使用，因此保持定义
const DESKTOP_HERO_IMAGE = "/images/Manetta-hero-banner-bg-desktop.jpg";
const MOBILE_HERO_IMAGE = "/images/Manetta-hero-banner-bg-mobile.png";
---
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manetta Modular Bag</title>

    <link
        rel="preload"
        href={DESKTOP_HERO_IMAGE}
        as="image"
        media="(min-width: 769px)"
    />
    <link
        rel="preload"
        href={MOBILE_HERO_IMAGE}
        as="image"
        media="(max-width: 768px)"
    />


    <link rel="canonical" href="https://manettabag.com/" />
</head>
<body>

    <Header />

    <HeroBanner
        title="Modular Camera Bag - 1 Bag, 3X the Space"
        description="Modular Design | 3X Expandable Space | Waterproff Protection | Ergonormic Carrying System"
        desktopImage={DESKTOP_HERO_IMAGE}
        mobileImage={MOBILE_HERO_IMAGE}
    />

    <KlaviyoFormModule
        klaviyoApiKey="X86W3s"
        desktopFormId="XTtKZk"
        mobileFormId="XTtKZk"
    />

    <ImageGridSix1 title="Explore More Possibilities" />

    <ImageCarouselSplit
        title="How to organize your clothes, camera gear, and office equipment"
        featureImage="/images/grid/grid-7.png"
        featureAlt="Manetta"
    />

    <ImageGridSix title="Learn More" />

    <KlaviyoFormModule
        klaviyoApiKey="X86W3s"
        desktopFormId="XTtKZk"
        mobileFormId="XTtKZk"
    />

    <SimpleTitleModule title="MANETTA exists to bring joy through creation and to unlock new possibilities for those who love photography" />

    <FullWidthBanner
        desktopImage="/images/full-w.png"
        mobileImage="/images/full-w-mobile.jpg"
        alt="这是一个响应式全宽横幅"
        height=""
    />

    <KlaviyoFormModule
        klaviyoApiKey="X86W3s"
        desktopFormId="XTtKZk"
        mobileFormId="XTtKZk"
    />

    <main>
        {/* 其他众筹模块将在这里添加，这些模块可能需要宽度限制 */}
    </main>

    <Footer />

</body>
</html>