---
// src/components/HeroBanner.astro
//import '../styles/hero-banner.css';

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
}

const { title, description, desktopImage, mobileImage } = Astro.props;
---

<section class="hero-banner">
    <picture>
        {/* 移动端图片优先加载 (小于等于 768px) */}
        <source srcset={mobileImage} media="(max-width: 768px)">

        {/* 默认加载桌面端图片 */}
        <img
            src={desktopImage}
            alt={title}
            class="hero-banner__background-picture"
            loading="eager"
            decoding="async"
            fetchpriority="high"
        />
    </picture>

    <div class="hero-banner__overlay"></div> {/* 半透明蒙版 */}

    <div class="hero-banner__content">
        <h1>{title}</h1>
        <p>{description}</p>
    </div>
</section>

<style>
    /*
 * =======================================================
 * src/styles/hero-banner.css - 最终版 (全宽内容 + 响应式字体)
 * 策略: 内容全宽 (100% 视口宽度)，仅通过 padding 控制左右边距
 * =======================================================
 */

.hero-banner {
    position: relative;
    width: 100%;
    background-color: #333333;
    overflow: hidden;
}

/* 1. 背景图片样式 */
.hero-banner__background-picture {
    width: 100%;
    height: auto;
    display: block;
    z-index: 1;
}

/* 2. 背景蒙版 */
.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 2;
}

/* 3. 内容区域样式 (全宽容器) */
.hero-banner__content {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);

    padding-top: 80px;
    z-index: 3;

    /* 关键修正 A: 移除 max-width，使其宽度继承父元素（全宽） */
    max-width: 100%; /* 确保它至少是全宽的 */
    width: 100%;     /* 确保它撑开 */

    /* 关键修正 B: 统一设置左右内边距，作为所有设备上的最小安全边距 */
    padding-left: 20px;
    padding-right: 20px;

    text-align: center;
    color: #ffffff;
}

/* 4. H1 标题 - 流体排版 */
.hero-banner__content h1 {
    /* 字体范围: 24px 到 40px，保持不变 */
    font-size: clamp(1.7rem, 2.2vw, 2.5rem);
    /* H1 现在会占满 100% 的 content 区域（即全宽减去 20px 边距） */
    width: 100%;
    margin-bottom: 15px;
    line-height: 1.1;
    font-weight: bold;
}

/* P 字段 - 流体排版 */
.hero-banner__content p {
    /* 字体范围: 14.4px 到 22.4px，保持不变 */
    font-size: clamp(0.9rem, 1.2vw, 1.4rem);

    /* 关键修正 C: 移除 max-width，使其也占满全宽（但不会比 H1 窄） */
    max-width: 100%; /* 移除 700px/900px 的硬限制 */

    margin-left: auto; /* 保持居中规则，但现在 P 字段是全宽的 */
    margin-right: auto;
    line-height: 1.6;
}

/* 5. 移动端调整 */
@media (max-width: 768px) {
    .hero-banner__content {
        padding-top: 60px;
        /* 关键修正 D: 移动端使用更小的内边距，让内容更贴边 */
        padding-left: 15px;
        padding-right: 15px;
    }

    /* H1 和 P 字体大小由 clamp() 统一处理 */
}
</style>