---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  // 新增参数：用于显示下方的特性文字和图片
  featureText?: string;
  featureImage?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage
} = Astro.props;
---

<section class="hero-banner">
    {/* 1. 背景层：绝对定位铺满 */}
    <div class="hero-banner__bg-wrapper">
        <picture>
            {/* 移动端背景图 */}
            <source srcset={mobileImage} media="(max-width: 768px)">
            {/* 桌面端背景图 */}
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        {/* 半透明遮罩 */}
        <div class="hero-banner__overlay"></div>
    </div>

    {/* 2. 内容层：Flex Column 布局 */}
    <div class="hero-banner__content">
        
        {/* 上部：标题和描述 (固定在较上方) */}
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {/* 下部：特性区域 (自动占据剩余空间并居中) */}
        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧文字 */}
                    <div class="hero-feature-text">
                        <p>{featureText}</p>
                    </div>
                    
                    {/* 右侧图片 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/*
 * =======================================================
 * src/styles/hero-banner.css
 * 布局逻辑：
 * 1. Banner 高度至少 90vh。
 * 2. Content 采用 Flex Column。
 * 3. Header 通过 padding-top 固定在顶部。
 * 4. Wrapper 通过 flex-grow: 1 占据剩余高度，并 justify-content: center 实现垂直居中。
 * =======================================================
 */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; /* 保证高度足够，才有“中间”的概念 */
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

/* --- 背景控制 --- */
.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover; /* 保持比例填充 */
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.45); /* 遮罩深度 */
    z-index: 2;
}

/* --- 内容布局核心 --- */
.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    height: 100%; /* 继承 Banner 高度 */
    
    display: flex;
    flex-direction: column; /* 垂直排列 */
    
    /* [控制 Title 位置的关键]：90px 距离顶部 */
    padding-top: 90px; 
    
    padding-bottom: 40px; /* 底部留白 */
    padding-left: 20px;
    padding-right: 20px;
    
    color: #ffffff;
}

/* 1. 顶部 Header */
.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0; /* 防止被挤压 */
}

.hero-header h1 {
    font-size: clamp(2rem, 3vw, 3.5rem);
    margin-bottom: 15px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px;
}

/* 2. 中部 Wrapper (弹性容器) */
.hero-feature-wrapper {
    /* 核心代码：吃掉 Header 下方所有剩余空间 */
    flex-grow: 1; 
    
    /* 核心代码：让内部元素（Row）在这个大空间里垂直居中 */
    display: flex;
    flex-direction: column;
    justify-content: center; 
    
    width: 100%;
}

/* 3. 特性行 (左右布局) */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    
    /* 核心代码：确保文字和图片互相垂直对齐 */
    align-items: center; 
    
    justify-content: space-between;
    width: 100%;
    gap: 60px;
    max-width: 1000px;
    margin: 0 auto; /* 水平居中 */
}

/* 左侧文字 */
.hero-feature-text {
    flex: 1;
    text-align: left;
}

.hero-feature-text p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #f0f0f0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5); /* 增加一点阴影提高可读性 */
}

/* 右侧图片 */
.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 380px; /* 限制图片最大高度 */
    object-fit: contain;
    filter: drop-shadow(0 15px 30px rgba(0,0,0,0.4)); /* 图片投影，增加立体感 */
}

/* --- 移动端适配 (<= 768px) --- */
@media (max-width: 768px) {
    .hero-banner {
        /* 移动端通常不需要 min-height: 90vh，自然高度体验更好 */
        /* 如果您希望移动端也是全屏，可以保留，但可能会导致小屏手机内容显示不全 */
        min-height: auto; 
    }

    .hero-banner__content {
        padding-top: 100px; /* 移动端顶部留白 */
        padding-bottom: 60px;
    }

    .hero-feature-wrapper {
        flex-grow: 0; /* 移动端取消强力撑开 */
        margin-top: 40px; /* 改为固定间距 */
    }

    .hero-feature-row {
        flex-direction: column; /* 上下堆叠 */
        gap: 30px;
        text-align: center;
    }

    .hero-feature-text {
        text-align: center;
        order: 1; /* 文字在上 */
    }

    .hero-feature-image {
        order: 2; /* 图片在下 */
    }

    .hero-feature-image img {
        max-height: 250px; /* 移动端图片缩小 */
    }
}
</style>