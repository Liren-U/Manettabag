---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  featureText?: string;
  featureImage?: string;
  kickstarterLogo?: string;
}

const { 
  title, 
  description, 
  featureText,
  featureImage,
  kickstarterLogo
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧容器 */}
                    <div class="hero-feature-text">
                        <p class="feature-desc">{featureText}</p>
                        
                        {kickstarterLogo && (
                            <div class="ks-row">
                                <span class="ks-text">Coming soon on</span>
                                <img src={kickstarterLogo} alt="Kickstarter" class="ks-logo" />
                            </div>
                        )}
                    </div>
                    
                    {/* 右侧容器 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* src/styles/hero-banner.css */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: auto; /* 高度自适应 */
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #F2F2F2; 
    padding-bottom: 100px;
}

.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1600px; 
    height: auto; 
    display: flex;
    flex-direction: column;
    padding-top: 60px; 
    padding-left: 30px; 
    padding-right: 30px;
    color: #333333; 
}

.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0;
    margin-bottom: 20px; 
}

.hero-header h1 {
    font-size: clamp(2rem, 3.5vw, 4rem);
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
    color: #000000; 
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.5rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 900px;
    color: #555555;
}

.hero-feature-wrapper {
    flex-grow: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start; 
    width: 100%;
    padding-bottom: 0; 
}

/* --- 核心布局容器 --- */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: flex-start; 
    justify-content: space-between;
    width: 100%;
    max-width: 1400px; 
    margin: 0 auto;
    gap: 50px; 
}

/* 左侧文字区块 */
.hero-feature-text {
    flex: 1;
    text-align: left;
    max-width: 650px; 
    
    /* 动态间距：视口高度的 15% */
    padding-top: 15vh;
}

.feature-desc {
    font-size: clamp(1rem, 1.5vw, 1.5rem); 
    line-height: 1.6;
    margin-bottom: 25px;
    color: #444444;
}

/* --- Kickstarter 样式 (核心修改部分) --- */
.ks-row {
    display: flex;
    align-items: center; 
    
    /* [修改 1] 允许换行！
       当空间不足时（比如手机竖屏），Logo 会自动掉到下一行 
       而不是强行挤在一起 */
    flex-wrap: wrap;
    
    /* 设置行列间距，换行后 Logo 和文字之间也会有间距 */
    gap: 0.8em; 
}

.ks-text {
    /* [修改 2] 字体大小响应式 
       因为允许换行，最小字体可以稍微设大一点点 (0.9rem)，保证清晰度 */
    font-size: clamp(0.9rem, 2.5vw, 1.3rem); 
    
    font-weight: 600; 
    text-transform: uppercase; 
    letter-spacing: 1px;
    line-height: 1.2; 
    color: #333333;

    /* [修改 3] 关键：文字本身不换行
       "Coming soon on" 永远是一个整体 */
    white-space: nowrap; 
}

.ks-logo {
    /* Logo 高度随字体大小成比例 */
    height: 1.6em; 
    width: auto;
    display: block;
}

/* 右侧产品图区块 */
.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center; 
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 600px; 
    object-fit: contain;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.15)); 
}

/* --- 移动端适配 --- */
@media (max-width: 900px) { 
    .hero-banner {
        padding-bottom: 60px;
    }

    .hero-banner__content {
        padding-top: 80px; 
        padding-left: 20px;
        padding-right: 20px;
    }

    .hero-feature-wrapper {
        margin-top: 30px; 
    }

    .hero-feature-row {
        flex-direction: column;
        gap: 0; 
        text-align: center;
        align-items: center; 
    }

    .hero-feature-text {
        display: contents;
        padding-top: 0; 
    }

    /* 排序 1: 文字 */
    .feature-desc {
        order: 1; 
        text-align: center;
        font-size: clamp(1.1rem, 4vw, 1.3rem); 
        margin-bottom: 20px; 
    }

    /* 排序 2: 图片 */
    .hero-feature-image {
        order: 2;
        width: 100%; 
        margin-bottom: 30px; 
    }

    /* 排序 3: Kickstarter Logo */
    .ks-row {
        order: 3;
        /* 在移动端居中显示 */
        justify-content: center;
        width: 100%;
    }
    
    /* 移动端字体大小 */
    .ks-text {
        font-size: clamp(0.8rem, 3.5vw, 1.1rem); 
    }

    .hero-feature-image img {
        max-height: 400px; 
    }
}
</style>