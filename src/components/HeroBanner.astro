---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  // 新增 Props：用于下方的特性介绍和产品图
  featureText?: string;
  featureImage?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            {/* 移动端背景图 */}
            <source srcset={mobileImage} media="(max-width: 768px)">
            {/* 桌面端背景图 */}
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {/* 只有当传入了 featureImage 时才渲染下方的新区域 */}
        {featureImage && (
            <div class="hero-feature-row">
                {/* 左侧文字区域 */}
                <div class="hero-feature-text">
                    {/* 如果传入了 featureText，显示它，否则显示默认占位或留空 */}
                    <p>{featureText}</p>
                </div>
                
                {/* 右侧图片区域 */}
                <div class="hero-feature-image">
                    <img src={featureImage} alt="Product Feature" />
                </div>
            </div>
        )}
    </div>
</section>

<style>
/*
 * src/styles/hero-banner.css
 * 策略: 
 * 1. 容器 min-height: 90vh 保证有足够的高度。
 * 2. 使用 Flexbox 的 column 布局。
 * 3. Title 也就是 .hero-header 位于顶部。
 * 4. Feature Row 使用 margin-top: auto 和 margin-bottom: auto，这样它会自动占据剩余空间的中心位置。
 */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; /* 增加高度，给“中间”留出空间 */
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

/* 背景图容器 */
.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 2;
}

/* 内容区域 - 关键布局修改 */
.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    height: 100%; /* 继承父元素高度 */
    
    /* 设置为 Flex 列布局 */
    display: flex;
    flex-direction: column;
    
    /* 顶部内边距：控制 Title 距离顶部的绝对位置 */
    padding-top: 130px; 
    padding-bottom: 60px;
    padding-left: 20px;
    padding-right: 20px;
    
    color: #ffffff;
}

/* 1. 上部的 Title 区域 */
.hero-header {
    text-align: center;
    width: 100%;
    /* 不需要 margin-bottom，因为下方的元素会自动居中 */
    flex-shrink: 0; /* 防止空间不足时被压缩 */
}

.hero-header h1 {
    font-size: clamp(2rem, 3vw, 3.5rem);
    margin-bottom: 15px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px;
}

/* 2. 中部的产品/文字区域 */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    gap: 60px;
    max-width: 1000px;
    
    /* 自身居中 */
    align-self: center; 
    
    /* 关键技巧：上下 Auto Margin */
    /* 这会让这个区块自动浮动在 Title 和 底部 之间的正中间 */
    margin-top: auto;
    margin-bottom: auto;
}

/* 左侧文字 */
.hero-feature-text {
    flex: 1;
    text-align: left;
}

.hero-feature-text p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #eee;
}

/* 右侧图片 */
.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 380px; /* 控制中间图片大小 */
    object-fit: contain;
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
}

/* --- 移动端适配 --- */
@media (max-width: 768px) {
    .hero-banner {
        min-height: auto; /* 移动端不要强制撑满屏幕，允许自然滚动 */
    }

    .hero-banner__content {
        padding-top: 100px;
        padding-bottom: 60px;
    }

    .hero-feature-row {
        flex-direction: column; /* 上下排列 */
        gap: 30px;
        text-align: center;
        
        /* 移动端取消自动居中，改为固定间距，防止内容太长重叠 */
        margin-top: 40px; 
        margin-bottom: 0;
    }

    .hero-feature-text {
        text-align: center;
        order: 1;
    }

    .hero-feature-image {
        order: 2;
    }

    .hero-feature-image img {
        max-height: 250px;
    }
}
</style>