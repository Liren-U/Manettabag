---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  featureText?: string;
  featureImage?: string;
  kickstarterLogo?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage,
  kickstarterLogo
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            <source srcset={mobileImage} media="(max-width: 768px)">
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧容器：包含文字和KS Logo */}
                    <div class="hero-feature-text">
                        <p class="feature-desc">{featureText}</p>
                        
                        {kickstarterLogo && (
                            <div class="ks-row">
                                <span class="ks-text">Coming soon on</span>
                                <img src={kickstarterLogo} alt="Kickstarter" class="ks-logo" />
                            </div>
                        )}
                    </div>
                    
                    {/* 右侧容器：产品图 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* src/styles/hero-banner.css */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; 
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.45);
    z-index: 2;
}

.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 60px; 
    padding-bottom: 0; 
    padding-left: 20px;
    padding-right: 20px;
    color: #ffffff;
}

.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0;
    margin-bottom: 20px; 
}

.hero-header h1 {
    font-size: clamp(2rem, 3vw, 3.5rem);
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px;
}

.hero-feature-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; 
    width: 100%;
    padding-bottom: 80px; 
}

/* 电脑端布局 */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: space-between;
    width: 100%;
    gap: 60px;
    max-width: 1000px;
    margin: 0 auto;
}

.hero-feature-text {
    flex: 1;
    text-align: left;
}

.feature-desc {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #f0f0f0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    margin-bottom: 20px;
}

/* Kickstarter 样式 */
.ks-row {
    display: flex;
    align-items: center; 
    gap: 10px; 
}

.ks-text {
    font-size: 0.9rem; 
    font-weight: 600; 
    text-transform: uppercase; 
    color: #fff;
    letter-spacing: 1px;
    line-height: 1; 
}

.ks-logo {
    height: 18px; 
    width: auto;
    display: block;
}

.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 380px;
    object-fit: contain;
    filter: drop-shadow(0 15px 30px rgba(0,0,0,0.4));
}

/* --- 移动端适配 (核心修改) --- */
@media (max-width: 768px) {
    .hero-banner__content {
        padding-top: 80px; 
    }

    .hero-feature-wrapper {
        flex-grow: 0;
        justify-content: flex-start;
        margin-top: 40px; 
        padding-bottom: 60px;
    }

    /* 移动端主容器设为列布局 */
    .hero-feature-row {
        flex-direction: column;
        gap: 0; /* 间距由子元素 margin 控制 */
        text-align: center;
    }

    /* * [关键修改技巧] 
     * 使用 display: contents;
     * 作用：在移动端，"消除" .hero-feature-text 这个父级 div 的布局影响。
     * 结果：它的子元素 (p.feature-desc 和 div.ks-row) 会“升级”变成 .hero-feature-row 的直接子元素。
     * 这样我们就可以把它们和 图片容器 (.hero-feature-image) 混合在一起排序了。
     */
    .hero-feature-text {
        display: contents;
    }

    /* 排序 1: 文字 */
    .feature-desc {
        order: 1; 
        text-align: center;
        margin-bottom: 30px; /* 文字和图片的距离 */
    }

    /* 排序 2: 图片 (插入到文字和Logo中间) */
    .hero-feature-image {
        order: 2;
        width: 100%; /* 确保图片占满宽 */
        margin-bottom: 30px; /* 图片和底部 Logo 的距离 */
    }

    /* 排序 3: Kickstarter Logo */
    .ks-row {
        order: 3;
        justify-content: center;
        width: 100%;
    }

    .hero-feature-image img {
        max-height: 250px;
    }
}
</style>