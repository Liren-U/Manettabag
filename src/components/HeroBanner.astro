---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  // 新增 Props：用于下方的特性介绍和产品图
  featureText?: string;
  featureImage?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            {/* 移动端背景图 */}
            <source srcset={mobileImage} media="(max-width: 768px)">
            {/* 桌面端背景图 */}
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {/* 只有当传入了 featureImage 时才渲染下方的新区域 */}
        {featureImage && (
            <div class="hero-feature-row">
                {/* 左侧文字区域 */}
                <div class="hero-feature-text">
                    {/* 如果传入了 featureText，显示它，否则显示默认占位或留空 */}
                    <p>{featureText}</p>
                </div>
                
                {/* 右侧图片区域 */}
                <div class="hero-feature-image">
                    <img src={featureImage} alt="Product Feature" />
                </div>
            </div>
        )}
    </div>
</section>

<style>
/*
 * src/styles/hero-banner.css
 * 策略: 
 * 1. 内容撑开高度
 * 2. 电脑端改为“顶部对齐”，通过 padding-top 控制标题高度
 */

.hero-banner {
    position: relative;
    width: 100%;
    /* 保证最小高度 */
    min-height: 85vh; 
    display: flex;
    
    /* [修改点 1] 电脑端改为顶部对齐 (flex-start)，而不是居中 (center) */
    /* 这样标题的位置就由 padding-top 决定，而不会被下方的图片高度影响 */
    align-items: flex-start; 
    
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

/* 背景图容器 */
.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 2;
}

/* 内容区域 */
.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    
    /* [修改点 2] 这里控制标题距离顶部的具体位置 */
    /* 140px 大约是 Header 高度 + 想要的间距，你可以把这个数字改小（如 120px）让标题更靠上 */
    padding-top: 140px; 
    
    padding-bottom: 60px;
    padding-left: 20px;
    padding-right: 20px;
    
    color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 头部标题区域 */
.hero-header {
    text-align: center;
    /* [修改点 3] 增加标题和下方内容的间距，让布局更舒展 */
    margin-bottom: 60px; 
    width: 100%;
}

.hero-header h1 {
    font-size: clamp(2rem, 3vw, 3.5rem); /* 稍微调大了点字体，更有气势 */
    margin-bottom: 15px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px;
}

/* --- 下方左右分栏区域 --- */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: center; /* 垂直方向居中对齐 */
    justify-content: space-between;
    width: 100%;
    gap: 60px; /* 增加左右间距 */
    
    /* 限制内容区的最大宽度，让文字和图片不要太靠边 */
    max-width: 1000px; 
}

/* 左侧文字 */
.hero-feature-text {
    flex: 1;
    text-align: left;
}

.hero-feature-text p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #eee;
}

/* 右侧图片 */
.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    /* 稍微限制图片高度，防止把页面撑太长 */
    max-height: 350px; 
    object-fit: contain;
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
}

/* --- 移动端适配 --- */
@media (max-width: 768px) {
    .hero-banner {
        /* 移动端依然保持垂直居中可能更好看，或者你也想靠上就保持 flex-start */
        align-items: center; 
        min-height: auto;
    }

    .hero-banner__content {
        /* 移动端不需要那么大的 padding-top */
        padding-top: 100px; 
        padding-bottom: 40px;
    }

    .hero-header {
        margin-bottom: 30px;
    }

    .hero-feature-row {
        flex-direction: column;
        gap: 30px;
        text-align: center;
    }

    .hero-feature-text {
        text-align: center;
        order: 1;
    }

    .hero-feature-image {
        order: 2;
    }
    
    .hero-feature-image img {
        max-height: 250px; /* 移动端图片稍微小一点 */
    }
}
</style>