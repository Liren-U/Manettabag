---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  featureText?: string;
  featureImage?: string;
  kickstarterLogo?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage,
  kickstarterLogo
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            <source srcset={mobileImage} media="(max-width: 768px)">
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧容器：包含文字和KS Logo */}
                    <div class="hero-feature-text">
                        <p class="feature-desc">{featureText}</p>
                        
                        {kickstarterLogo && (
                            <div class="ks-row">
                                <span class="ks-text">Coming soon on</span>
                                <img src={kickstarterLogo} alt="Kickstarter" class="ks-logo" />
                            </div>
                        )}
                    </div>
                    
                    {/* 右侧容器：产品图 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* src/styles/hero-banner.css */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; 
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.45);
    z-index: 2;
}

.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    
    /* 容器放宽，给 1400px 的内部元素留出 padding 空间 */
    max-width: 1600px; 
    
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 60px; 
    padding-bottom: 0; 
    padding-left: 30px; 
    padding-right: 30px;
    color: #ffffff;
}

.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0;
    margin-bottom: 20px; 
}

.hero-header h1 {
    font-size: clamp(2rem, 3.5vw, 4rem);
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.5rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 900px;
}

.hero-feature-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; 
    width: 100%;
    padding-bottom: 50px; 
}

/* 核心布局容器 */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: space-between;
    width: 100%;
    
    /* [修改 1] 核心容器宽度设置为 1400px */
    max-width: 1400px; 
    
    margin: 0 auto;
    gap: 50px; /* 增加间距 */
}

.hero-feature-text {
    flex: 1;
    text-align: left;
    max-width: 650px; 
}

.feature-desc {
    /* [修改 2] 响应式字体：最小 1rem，最大 1.5rem，中间随视口宽度变化 */
    font-size: clamp(1rem, 1.5vw, 1.5rem); 
    
    line-height: 1.6;
    color: #f0f0f0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    margin-bottom: 25px;
}

/* --- Kickstarter 样式 --- */
.ks-row {
    display: flex;
    align-items: center; 
    
    /* [修改 3] 强制一行显示，不换行 */
    white-space: nowrap; 
    
    gap: 0.8em; /* 间距使用 em，随字体缩放 */
}

.ks-text {
    /* [修改 4] 智能响应式字体，确保手机上一行能放下 */
    /* 最小 12px，视口宽度的 2.5%，最大 20px */
    font-size: clamp(0.75rem, 2.5vw, 1.25rem); 
    
    font-weight: 600; 
    text-transform: uppercase; 
    color: #fff;
    letter-spacing: 1px;
    line-height: 1; 
}

.ks-logo {
    /* [修改 5] 图片高度使用 em 单位 */
    /* 这样当 ks-text 字体变大变小时，Logo 会自动保持 1.6倍于文字高度的比例 */
    height: 1.6em; 
    
    width: auto;
    display: block;
}

.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center; 
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    
    /* [修改 6] 图片放大：高度允许达到 600px */
    max-height: 600px; 
    
    object-fit: contain;
    filter: drop-shadow(0 25px 50px rgba(0,0,0,0.5)); 
}

/* --- 移动端适配 --- */
@media (max-width: 900px) { /* 调整断点，适配平板竖屏 */
    .hero-banner__content {
        padding-top: 80px; 
        padding-left: 20px;
        padding-right: 20px;
    }

    .hero-feature-wrapper {
        flex-grow: 0;
        justify-content: flex-start;
        margin-top: 30px; 
        padding-bottom: 50px;
    }

    .hero-feature-row {
        flex-direction: column;
        gap: 0; 
        text-align: center;
    }

    /* 使用 display: contents 保持 文字->图->Kickstarter 的顺序 */
    .hero-feature-text {
        display: contents;
    }

    .feature-desc {
        order: 1; 
        text-align: center;
        
        /* 移动端文字稍大一点以便阅读 */
        font-size: clamp(1.1rem, 4vw, 1.3rem); 
        
        margin-bottom: 20px; 
    }

    .hero-feature-image {
        order: 2;
        width: 100%; 
        margin-bottom: 30px; 
    }

    .ks-row {
        order: 3;
        justify-content: center;
        width: 100%;
        /* 移动端间距也随字体缩放 */
    }
    
    /* 移动端单独控制 KS 字体，确保不换行 */
    .ks-text {
        font-size: clamp(0.7rem, 3.5vw, 1rem); 
    }

    .hero-feature-image img {
        /* 移动端图片也放大 */
        max-height: 400px; 
    }
}
</style>