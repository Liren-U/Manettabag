---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  // 特性区域参数
  featureText?: string;
  featureImage?: string;
  // 新增：Kickstarter Logo 图片路径
  kickstarterLogo?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage,
  kickstarterLogo
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            <source srcset={mobileImage} media="(max-width: 768px)">
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        {/* Title 区域 */}
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {/* Feature 区域 */}
        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧：文字 + Kickstarter 预告 */}
                    <div class="hero-feature-text">
                        <p class="feature-desc">{featureText}</p>
                        
                        {/* 新增：Kickstarter 行 */}
                        {kickstarterLogo && (
                            <div class="ks-row">
                                <span class="ks-text">Coming soon on</span>
                                <img src={kickstarterLogo} alt="Kickstarter" class="ks-logo" />
                            </div>
                        )}
                    </div>
                    
                    {/* 右侧：产品图 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* src/styles/hero-banner.css */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; 
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.45);
    z-index: 2;
}

.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    height: 100%;
    display: flex;
    flex-direction: column;
    
    /* 标题距离顶部的高度 */
    padding-top: 60px; 
    padding-bottom: 0; 
    padding-left: 20px;
    padding-right: 20px;
    
    color: #ffffff;
}

.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0;
    margin-bottom: 20px; 
}

.hero-header h1 {
    font-size: clamp(2rem, 3vw, 3.5rem);
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px;
}

/* Feature 容器：沉底 */
.hero-feature-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* 内容沉底 */
    width: 100%;
    padding-bottom: 80px; /* 距离底部的距离 */
}

.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: space-between;
    width: 100%;
    gap: 60px;
    max-width: 1000px;
    margin: 0 auto;
}

/* 左侧文字块 */
.hero-feature-text {
    flex: 1;
    text-align: left;
}

.feature-desc {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #f0f0f0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    margin-bottom: 20px; /* 文字和 Kickstarter Logo 之间的间距 */
}

/* --- 新增：Kickstarter 样式 --- */
.ks-row {
    display: flex;
    align-items: center; /* 垂直对齐文字和 Logo */
    gap: 12px; /* 文字和 Logo 的间距 */
}

.ks-text {
    font-size: 1.2rem;
    font-weight: 600; /* 加粗 */
    text-transform: uppercase; /* 大写看起来更像 Banner */
    color: #fff;
    letter-spacing: 1px;
}

.ks-logo {
    height: 30px; /* 控制 Kickstarter Logo 的高度，按需调整 */
    width: auto;
    display: block;
    /* 如果你的 Logo 是黑色的，可以用滤镜把它变白，或者直接上传白色 PNG */
    /* filter: brightness(0) invert(1); */ 
}

/* 右侧图片 */
.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 380px;
    object-fit: contain;
    filter: drop-shadow(0 15px 30px rgba(0,0,0,0.4));
}

/* --- 移动端适配 --- */
@media (max-width: 768px) {
    .hero-banner__content {
        padding-top: 80px; 
    }

    .hero-feature-wrapper {
        flex-grow: 0;
        justify-content: flex-start;
        margin-top: 40px; 
        padding-bottom: 60px;
    }

    .hero-feature-row {
        flex-direction: column;
        gap: 30px;
        text-align: center;
    }

    .hero-feature-text {
        text-align: center;
        order: 1;
        display: flex;
        flex-direction: column;
        align-items: center; /* 移动端让文字和 KS Logo 居中 */
    }
    
    /* 移动端 KS 行也要居中 */
    .ks-row {
        justify-content: center;
    }

    .hero-feature-image {
        order: 2;
    }

    .hero-feature-image img {
        max-height: 250px;
    }
}
</style>