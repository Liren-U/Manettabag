---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  // 新增 Props：用于下方的特性介绍和产品图
  featureText?: string;
  featureImage?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            {/* 移动端背景图 */}
            <source srcset={mobileImage} media="(max-width: 768px)">
            {/* 桌面端背景图 */}
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {/* 只有当传入了 featureImage 时才渲染下方的新区域 */}
        {featureImage && (
            <div class="hero-feature-row">
                {/* 左侧文字区域 */}
                <div class="hero-feature-text">
                    {/* 如果传入了 featureText，显示它，否则显示默认占位或留空 */}
                    <p>{featureText}</p>
                </div>
                
                {/* 右侧图片区域 */}
                <div class="hero-feature-image">
                    <img src={featureImage} alt="Product Feature" />
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* 策略变更：
   由 Content (内容) 撑开高度，背景图采用 absolute fill 填充。
   这样可以防止新增的产品图超出背景区域。
*/

.hero-banner {
    position: relative;
    width: 100%;
    /* 最小高度，防止内容太少时 Banner 太窄 */
    min-height: 80vh; 
    display: flex;
    align-items: center; /* 垂直居中 */
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

/* 背景图容器：绝对定位，铺满整个区域 */
.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover; /* 关键：保持比例覆盖，不拉伸 */
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* 稍微加深一点遮罩，因为内容变多了，保证可读性 */
    z-index: 2;
}

/* 内容区域：改为 Relative，由它来决定 Banner 的实际高度 */
.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px; /* 限制内容最大宽度，避免在大屏上太散 */
    padding: 100px 20px 60px; /* Top padding 留出空间给 Header */
    color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 头部标题区域 */
.hero-header {
    text-align: center;
    margin-bottom: 40px; /* 与下方新区域的间距 */
    width: 100%;
}

.hero-header h1 {
    font-size: clamp(1.8rem, 2.5vw, 3rem);
    margin-bottom: 15px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px; /* 描述文字不要太宽，方便阅读 */
}

/* --- 新增：下方左右分栏区域 --- */
.hero-feature-row {
    display: flex;
    flex-direction: row; /* 桌面端：左右排列 */
    align-items: center; /* 垂直居中对齐 */
    justify-content: space-between;
    width: 100%;
    gap: 40px; /* 左右间距 */
    margin-top: 20px;
}

/* 左侧文字 */
.hero-feature-text {
    flex: 1;
    text-align: left; /* 左对齐 */
}

.hero-feature-text p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #eee;
}

/* 右侧图片 */
.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center; /* 图片在自己的格子里居中 */
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 400px; /* 限制图片最大高度，防止把 Banner 撑得过高 */
    object-fit: contain;
    /* 如果你想给产品图加一点投影，让它更有立体感 */
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3)); 
}

/* --- 移动端适配 --- */
@media (max-width: 768px) {
    .hero-banner {
        min-height: auto; /* 移动端高度自动 */
    }

    .hero-banner__content {
        padding-top: 80px;
    }

    .hero-feature-row {
        flex-direction: column; /* 移动端：上下堆叠 */
        gap: 30px;
        text-align: center;
    }

    .hero-feature-text {
        text-align: center; /* 移动端文字居中 */
        order: 1; /* 你可以调整顺序，比如想让图片在文字上面，就设为 2 */
    }

    .hero-feature-image {
        order: 2;
    }
}
</style>