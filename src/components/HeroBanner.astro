---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  // 新增：下方特性区域的文字和图片
  featureText?: string;
  featureImage?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            {/* 移动端背景图 */}
            <source srcset={mobileImage} media="(max-width: 768px)">
            {/* 桌面端背景图 */}
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        {/* 原有的标题区域 */}
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {/* 新增：左文右图区域 (仅当有图片传入时显示) */}
        {featureImage && (
            <div class="hero-feature-split">
                <div class="hero-feature-left">
                    <p>{featureText}</p>
                </div>
                <div class="hero-feature-right">
                    <img src={featureImage} alt="Feature highlight" />
                </div>
            </div>
        )}
    </div>
</section>

<style>
/*
 * =======================================================
 * src/styles/hero-banner.css
 * 策略变更：由内容撑开高度 (Content-driven height)
 * =======================================================
 */

.hero-banner {
    position: relative;
    width: 100%;
    /* 设置最小高度，防止内容太少时 Banner 太窄 */
    min-height: 85vh; 
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

/* 1. 背景层：改为绝对定位，铺满整个区域 */
.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover; /* 关键：保持比例覆盖，不拉伸 */
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 2;
}

/* 2. 内容区域：改为 Relative，由它来决定 Banner 的实际高度 */
.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px; /* 限制最大宽度，保持排版整洁 */
    
    /* 保持原来的排版位置：通过 padding-top 控制标题距离顶部的距离 */
    padding-top: 80px; 
    padding-bottom: 60px;
    padding-left: 20px;
    padding-right: 20px;

    color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 3. 标题区域样式 (保持原有风格) */
.hero-header {
    text-align: center;
    width: 100%;
    margin-bottom: 60px; /* 与下方新区域拉开距离 */
}

.hero-header h1 {
    font-size: clamp(1.7rem, 2.2vw, 2.5rem);
    margin-bottom: 15px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(0.9rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px; /* 描述文字限制宽度，便于阅读 */
}

/* 4. 新增：左文右图布局 */
.hero-feature-split {
    display: flex;
    flex-direction: row; /* 左右排列 */
    align-items: center; /* 垂直居中 */
    justify-content: space-between;
    width: 100%;
    max-width: 1000px; /* 限制这块内容的宽度，防止太散 */
    gap: 50px; /* 左右间距 */
}

/* 左侧文字容器 */
.hero-feature-left {
    flex: 1;
    text-align: left; /* 文字左对齐 */
}

.hero-feature-left p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #f0f0f0;
}

/* 右侧图片容器 */
.hero-feature-right {
    flex: 1;
    display: flex;
    justify-content: center;
}

.hero-feature-right img {
    max-width: 100%;
    height: auto;
    max-height: 350px; /* 限制图片最大高度 */
    object-fit: contain;
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3)); /* 加一点阴影更有质感 */
}

/* 5. 移动端适配 */
@media (max-width: 768px) {
    .hero-banner__content {
        padding-top: 60px;
    }

    .hero-feature-split {
        flex-direction: column; /* 移动端改为上下堆叠 */
        gap: 30px;
        text-align: center;
    }

    .hero-feature-left {
        text-align: center; /* 移动端文字居中 */
        order: 1; /* 文字在上 */
    }

    .hero-feature-right {
        order: 2; /* 图片在下 */
    }
    
    .hero-feature-right img {
        max-height: 250px; /* 移动端图片稍微小一点 */
    }
}
</style>