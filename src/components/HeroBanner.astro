---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  desktopImage: string;
  mobileImage: string;
  featureText?: string;
  featureImage?: string;
  kickstarterLogo?: string;
}

const { 
  title, 
  description, 
  desktopImage, 
  mobileImage,
  featureText,
  featureImage,
  kickstarterLogo
} = Astro.props;
---

<section class="hero-banner">
    <div class="hero-banner__bg-wrapper">
        <picture>
            <source srcset={mobileImage} media="(max-width: 768px)">
            <img
                src={desktopImage}
                alt=""
                class="hero-banner__background-picture"
                loading="eager"
                decoding="async"
                fetchpriority="high"
            />
        </picture>
        <div class="hero-banner__overlay"></div>
    </div>

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧容器：包含文字和KS Logo */}
                    <div class="hero-feature-text">
                        <p class="feature-desc">{featureText}</p>
                        
                        {kickstarterLogo && (
                            <div class="ks-row">
                                <span class="ks-text">Coming soon on</span>
                                <img src={kickstarterLogo} alt="Kickstarter" class="ks-logo" />
                            </div>
                        )}
                    </div>
                    
                    {/* 右侧容器：产品图 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* src/styles/hero-banner.css */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; 
    display: flex;
    justify-content: center;
    overflow: hidden;
    background-color: #333;
}

.hero-banner__bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-banner__background-picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.45);
    z-index: 2;
}

.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    
    /* [修改 1] 整体容器加宽，给内容更多呼吸空间 */
    max-width: 1440px; 
    
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 60px; 
    padding-bottom: 0; 
    padding-left: 30px; /* 稍微增加两边内边距 */
    padding-right: 30px;
    color: #ffffff;
}

.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0;
    margin-bottom: 20px; 
}

.hero-header h1 {
    font-size: clamp(2rem, 3vw, 3.5rem);
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.4rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 800px;
}

.hero-feature-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; 
    width: 100%;
    padding-bottom: 60px; /* 稍微减少底部留白，让图片更贴底 */
}

/* 电脑端布局 */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: space-between;
    width: 100%;
    
    /* [修改 2] 核心容器加宽！从 1000px 改为 1280px */
    /* 这会让文字和图片分得更开，显得更大气 */
    max-width: 1280px; 
    
    margin: 0 auto;
    gap: 40px; /* 间距微调 */
}

.hero-feature-text {
    flex: 1;
    text-align: left;
    /* 增加一点最大宽度限制，防止文字行太长难以阅读 */
    max-width: 600px; 
}

.feature-desc {
    /* [修改] 字体稍微加大一点点，因为容器变大了 */
    font-size: 1.2rem; 
    line-height: 1.6;
    color: #f0f0f0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    margin-bottom: 25px;
}

/* Kickstarter 样式 */
.ks-row {
    display: flex;
    align-items: center; 
    gap: 12px; 
}

.ks-text {
    font-size: 1rem; /* 稍微加大一点配合整体 */
    font-weight: 600; 
    text-transform: uppercase; 
    color: #fff;
    letter-spacing: 1px;
    line-height: 1; 
}

.ks-logo {
    height: 20px; /* 配合字体微调 */
    width: auto;
    display: block;
}

.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center; /* 图片在自己格子里居中 */
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    
    /* [修改 3] 图片高度限制大幅放宽 */
    /* 之前是 380px，现在改为 550px，这会让图片明显变大 */
    max-height: 550px; 
    
    object-fit: contain;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.45)); /* 增加投影范围，更有立体感 */
}

/* --- 移动端适配 --- */
@media (max-width: 768px) {
    .hero-banner__content {
        padding-top: 80px; 
        padding-left: 20px;
        padding-right: 20px;
    }

    .hero-feature-wrapper {
        flex-grow: 0;
        justify-content: flex-start;
        margin-top: 30px; 
        padding-bottom: 50px;
    }

    .hero-feature-row {
        flex-direction: column;
        gap: 0; 
        text-align: center;
    }

    /* 保持 display: contents 用于重新排序 */
    .hero-feature-text {
        display: contents;
    }

    .feature-desc {
        order: 1; 
        text-align: center;
        font-size: 1.1rem;
        margin-bottom: 20px; 
    }

    .hero-feature-image {
        order: 2;
        width: 100%; 
        margin-bottom: 30px; 
    }

    .ks-row {
        order: 3;
        justify-content: center;
        width: 100%;
    }

    .hero-feature-image img {
        /* [修改 4] 移动端图片也放大 */
        /* 之前是 250px，现在是 380px，手机上看会更有冲击力 */
        max-height: 380px; 
    }
}
</style>