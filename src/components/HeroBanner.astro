---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  // 虽然现在不显示图片了，但为了不报错，暂时保留这些 Props 定义
  desktopImage: string;
  mobileImage: string;
  featureText?: string;
  featureImage?: string;
  kickstarterLogo?: string;
}

const { 
  title, 
  description, 
  // desktopImage, // 不再使用
  // mobileImage,  // 不再使用
  featureText,
  featureImage,
  kickstarterLogo
} = Astro.props;
---

<section class="hero-banner">
    {/* 【已删除】背景图片包装器 (.hero-banner__bg-wrapper) 及其内部的 picture 和 overlay 
      现在直接显示纯色背景
    */}

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧容器：包含文字和KS Logo */}
                    <div class="hero-feature-text">
                        <p class="feature-desc">{featureText}</p>
                        
                        {kickstarterLogo && (
                            <div class="ks-row">
                                <span class="ks-text">Coming soon on</span>
                                <img src={kickstarterLogo} alt="Kickstarter" class="ks-logo" />
                            </div>
                        )}
                    </div>
                    
                    {/* 右侧容器：产品图 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* src/styles/hero-banner.css */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; 
    display: flex;
    justify-content: center;
    overflow: hidden;
    
    /* [修改 1] 背景色改为指定的浅灰色 */
    background-color: #F2F2F2; 
}

/* 【已删除】以下不再需要的 CSS 类：
 .hero-banner__bg-wrapper
 .hero-banner__background-picture
 .hero-banner__overlay
*/

.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1600px; 
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 60px; 
    padding-bottom: 0; 
    padding-left: 30px; 
    padding-right: 30px;
    
    /* [修改 2] 全局文字颜色从白色改为深灰色，适应浅背景 */
    color: #333333; 
}

.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0;
    margin-bottom: 20px; 
}

.hero-header h1 {
    font-size: clamp(2rem, 3.5vw, 4rem);
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
    /* 可以选择让标题颜色更深一点 */
    color: #000000; 
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.5rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 900px;
    /* 描述文字稍微浅一点 */
    color: #555555;
}

.hero-feature-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; 
    width: 100%;
    padding-bottom: 50px; 
}

/* 核心布局容器 */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    align-items: center; 
    justify-content: space-between;
    width: 100%;
    max-width: 1400px; 
    margin: 0 auto;
    gap: 50px; 
}

.hero-feature-text {
    flex: 1;
    text-align: left;
    max-width: 650px; 
}

.feature-desc {
    font-size: clamp(1rem, 1.5vw, 1.5rem); 
    line-height: 1.6;
    margin-bottom: 25px;

    /* [修改 3] 特性描述文字颜色变深，移除深色背景下才需要的文字阴影 */
    color: #444444;
    /* text-shadow: 0 2px 4px rgba(0,0,0,0.5);  已移除 */
}

/* --- Kickstarter 样式 --- */
.ks-row {
    display: flex;
    align-items: center; 
    white-space: nowrap; 
    gap: 0.8em; 
}

.ks-text {
    font-size: clamp(0.75rem, 2.5vw, 1.25rem); 
    font-weight: 600; 
    text-transform: uppercase; 
    letter-spacing: 1px;
    line-height: 1; 

    /* [修改 4] Kickstarter 文字颜色变深 */
    color: #333333;
}

.ks-logo {
    height: 1.6em; 
    width: auto;
    display: block;
    /* [可选] 如果你的 Kickstarter Logo 是纯白色的，在浅背景下可能看不清。
       如果需要，可以取消下面这行的注释，用滤镜把它变成黑色 */
    /* filter: brightness(0); */
}

.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center; 
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 600px; 
    object-fit: contain;
    /* [修改 5] 调整投影，让它在浅色背景上更柔和自然 */
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.15)); 
}

/* --- 移动端适配 --- */
@media (max-width: 900px) { 
    .hero-banner__content {
        padding-top: 80px; 
        padding-left: 20px;
        padding-right: 20px;
    }

    .hero-feature-wrapper {
        flex-grow: 0;
        justify-content: flex-start;
        margin-top: 30px; 
        padding-bottom: 50px;
    }

    .hero-feature-row {
        flex-direction: column;
        gap: 0; 
        text-align: center;
    }

    .hero-feature-text {
        display: contents;
    }

    .feature-desc {
        order: 1; 
        text-align: center;
        font-size: clamp(1.1rem, 4vw, 1.3rem); 
        margin-bottom: 20px; 
    }

    .hero-feature-image {
        order: 2;
        width: 100%; 
        margin-bottom: 30px; 
    }

    .ks-row {
        order: 3;
        justify-content: center;
        width: 100%;
    }
    
    .ks-text {
        font-size: clamp(0.7rem, 3.5vw, 1rem); 
    }

    .hero-feature-image img {
        max-height: 400px; 
    }
}
</style>