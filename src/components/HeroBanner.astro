---
// src/components/HeroBanner.astro

interface Props {
  title: string;
  description: string;
  // 保留这些 Props 定义以兼容 index.astro 的调用，但实际上不再用于背景显示
  desktopImage: string;
  mobileImage: string;
  featureText?: string;
  featureImage?: string;
  kickstarterLogo?: string;
}

const { 
  title, 
  description, 
  // desktopImage, // 背景图不再使用
  // mobileImage,  // 背景图不再使用
  featureText,
  featureImage,
  kickstarterLogo
} = Astro.props;
---

<section class="hero-banner">
    {/* 背景图片结构已移除，直接使用 CSS 背景色 */}

    <div class="hero-banner__content">
        <div class="hero-header">
            <h1>{title}</h1>
            <p>{description}</p>
        </div>

        {featureImage && (
            <div class="hero-feature-wrapper">
                <div class="hero-feature-row">
                    {/* 左侧容器：包含文字和KS Logo */}
                    <div class="hero-feature-text">
                        <p class="feature-desc">{featureText}</p>
                        
                        {kickstarterLogo && (
                            <div class="ks-row">
                                <span class="ks-text">Coming soon on</span>
                                <img src={kickstarterLogo} alt="Kickstarter" class="ks-logo" />
                            </div>
                        )}
                    </div>
                    
                    {/* 右侧容器：产品图 */}
                    <div class="hero-feature-image">
                        <img src={featureImage} alt="Product Feature" />
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
/* src/styles/hero-banner.css */

.hero-banner {
    position: relative;
    width: 100%;
    min-height: 90vh; 
    display: flex;
    justify-content: center;
    overflow: hidden;
    /* 背景色改为浅灰色 */
    background-color: #F2F2F2; 
}

.hero-banner__content {
    position: relative;
    z-index: 3;
    width: 100%;
    /* 外部大容器最大宽度 1600px */
    max-width: 1600px; 
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 60px; 
    padding-bottom: 0; 
    padding-left: 30px; 
    padding-right: 30px;
    /* 字体颜色改为深色 */
    color: #333333; 
}

.hero-header {
    text-align: center;
    width: 100%;
    flex-shrink: 0;
    margin-bottom: 20px; 
}

.hero-header h1 {
    font-size: clamp(2rem, 3.5vw, 4rem);
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
    color: #000000; 
}

.hero-header p {
    font-size: clamp(1rem, 1.2vw, 1.5rem);
    margin: 0 auto;
    line-height: 1.6;
    max-width: 900px;
    color: #555555;
}

.hero-feature-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; 
    width: 100%;
    padding-bottom: 50px; 
}

/* --- 核心布局容器 --- */
.hero-feature-row {
    display: flex;
    flex-direction: row;
    
    /* 顶部对齐，配合 padding-top 实现自定义位置 */
    align-items: flex-start; 
    
    justify-content: space-between;
    width: 100%;
    /* 内部内容区域最大宽度 1400px */
    max-width: 1400px; 
    margin: 0 auto;
    gap: 50px; 
}

/* 左侧文字区块 */
.hero-feature-text {
    flex: 1;
    text-align: left;
    max-width: 650px; 
    
    /* [关键] 自适应顶部间距 */
    /* clamp(最小值, 视口高度百分比, 最大值) */
    /* 这会让文字既不贴顶，也不居中，而是处于大约前 1/3 的舒适位置 */
    padding-top: clamp(100px, 18vh, 240px);
}

.feature-desc {
    font-size: clamp(1rem, 1.5vw, 1.5rem); 
    line-height: 1.6;
    margin-bottom: 25px;
    color: #444444;
}

/* --- Kickstarter 样式 --- */
.ks-row {
    display: flex;
    align-items: center; 
    white-space: nowrap; /* 强制不换行 */
    gap: 0.8em; 
}

.ks-text {
    font-size: clamp(0.75rem, 2.5vw, 1.25rem); 
    font-weight: 600; 
    text-transform: uppercase; 
    letter-spacing: 1px;
    line-height: 1; 
    color: #333333;
}

.ks-logo {
    height: 1.6em; /* 随字体大小自动变化 */
    width: auto;
    display: block;
}

/* 右侧产品图区块 */
.hero-feature-image {
    flex: 1;
    display: flex;
    justify-content: center; 
    align-items: center;
}

.hero-feature-image img {
    max-width: 100%;
    height: auto;
    max-height: 600px; 
    object-fit: contain;
    /* 适应浅色背景的柔和投影 */
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.15)); 
}

/* --- 移动端适配 (平板竖屏及手机) --- */
@media (max-width: 900px) { 
    .hero-banner__content {
        padding-top: 80px; 
        padding-left: 20px;
        padding-right: 20px;
    }

    .hero-feature-wrapper {
        flex-grow: 0;
        justify-content: flex-start;
        margin-top: 30px; 
        padding-bottom: 50px;
    }

    .hero-feature-row {
        flex-direction: column;
        gap: 0; 
        text-align: center;
        /* 移动端恢复居中对齐 */
        align-items: center; 
    }

    .hero-feature-text {
        /* 使用 contents 消除父容器影响，以便重新排序 */
        display: contents;
        /* 移动端不需要顶部 padding */
        padding-top: 0; 
    }

    /* 排序 1: 文字 */
    .feature-desc {
        order: 1; 
        text-align: center;
        font-size: clamp(1.1rem, 4vw, 1.3rem); 
        margin-bottom: 20px; 
    }

    /* 排序 2: 图片 */
    .hero-feature-image {
        order: 2;
        width: 100%; 
        margin-bottom: 30px; 
    }

    /* 排序 3: Kickstarter Logo */
    .ks-row {
        order: 3;
        justify-content: center;
        width: 100%;
    }
    
    .ks-text {
        font-size: clamp(0.7rem, 3.5vw, 1rem); 
    }

    .hero-feature-image img {
        max-height: 400px; 
    }
}
</style>