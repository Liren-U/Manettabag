---
interface Props {
  /** Klaviyo 核心脚本使用的公共 API Key (Site ID)。 */
  klaviyoApiKey: string;

  /** 电脑端表单的 Form ID（例如：RxcZeJ）。 */
  desktopFormId: string;

  /** 手机端表单的 Form ID（可以和上面一样）。 */
  mobileFormId: string;
}

const { klaviyoApiKey, desktopFormId, mobileFormId } = Astro.props;
---

<section class="klaviyo-form-module">
  <div class="klaviyo-form-inner">

    {/* 桌面端表单，占位容器 */}
    <div class="klaviyo-placeholder-wrapper desktop-form-wrapper">
      <div
        class={`klaviyo-form-${desktopFormId}`}
        data-klaviyo-form={desktopFormId}
      ></div>
    </div>

    {/* 手机端表单，占位容器 */}
    <div class="klaviyo-placeholder-wrapper mobile-form-wrapper">
      <div
        class={`klaviyo-form-${mobileFormId}`}
        data-klaviyo-form={mobileFormId}
      ></div>
    </div>

  </div>
</section>

{klaviyoApiKey && (
  <>
    {/* 1）Klaviyo 官方核心脚本 */}
    <script
      type="text/javascript"
      src={`https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=${klaviyoApiKey}`}
      async
    ></script>

    {/* 2）监听 Klaviyo 表单提交事件，把 email/first_name 写入 localStorage */}
    <script is:inline>
      (function () {
        // 在任意对象里递归查找“像邮箱的字符串”
        function findEmailInObject(obj) {
          if (!obj || typeof obj !== 'object') return '';

          for (var key in obj) {
            if (!Object.prototype.hasOwnProperty.call(obj, key)) continue;
            var val = obj[key];

            if (typeof val === 'string') {
              // 有 @ 且不是 {{email}} 这种占位符
              if (
                val.indexOf('@') !== -1 &&
                val.indexOf('{{') === -1 &&
                val.indexOf('}}') === -1
              ) {
                return val;
              }
            } else if (val && typeof val === 'object') {
              var nested = findEmailInObject(val);
              if (nested) return nested;
            }
          }

          return '';
        }

        window.addEventListener('klaviyoForms', function (e) {
          try {
            if (!e || !e.detail) return;

            console.log('[Klaviyo] klaviyoForms event detail:', e.detail);

            // 我们主要关心提交成功的事件；你这边有 stepSubmit / submit
            var type = e.detail.type;
            if (type !== 'submit' && type !== 'stepSubmit') {
              return;
            }

            var email = '';

            // 1）优先在 metaData 里找
            if (e.detail.metaData) {
              email = findEmailInObject(e.detail.metaData);
            }

            // 2）如果还没找到，再整个 detail 扫一遍兜底
            if (!email) {
              email = findEmailInObject(e.detail);
            }

            if (email) {
              console.log('[Klaviyo] final captured email:', email);
              localStorage.setItem('manetta_email', email);
            } else {
              console.warn('[Klaviyo] still no valid email found, detail =', e.detail);
            }

            // 如果以后想用 first_name，可以类似写一个 findNameInObject 再存
          } catch (err) {
            console.warn('Klaviyo form listener error:', err);
          }
        });
      })();
    </script>

  </>
)}



<style>
/* ------------------------------------- */
/* 1. 模块容器基础样式 (全宽无边距) */
/* ------------------------------------- */
.klaviyo-form-module {
  /* 全宽 hack */
  width: 100vw;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  z-index: 1;
  padding: 0;
}

.klaviyo-form-inner {
  width: 100%;
  max-width: none;
  margin: 0;
  padding: 0;
}

/* 占位符容器的样式 */
.klaviyo-placeholder-wrapper {
  width: 100%;
  text-align: center;
}

/* 默认（电脑端 >= 769px）: 隐藏手机端表单 */
.mobile-form-wrapper {
  display: none;
}

/* 手机端样式 (<= 768px) */
@media (max-width: 768px) {
  .desktop-form-wrapper {
    display: none;
  }

  .mobile-form-wrapper {
    display: block;
  }
}

/* 确保 Klaviyo 注入的内容适应全宽 */
.klaviyo-placeholder-wrapper :global(iframe),
.klaviyo-placeholder-wrapper :global(div) {
  max-width: 100% !important;
  box-sizing: border-box;
}
</style>
