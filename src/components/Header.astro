---
// src/components/Header.astro
//import '../styles/header.css';

const HOME_URL = "/";
const LOGO_PATH = "/images/Manetta-Logo.png";
const SITE_NAME = "Manetta Bag 官方预热页";
---

<header id="manetta-page-header" class="page-header full-width-header">
    <div class="page-header__container">
        <div class="page-header__logo">
            <a href={HOME_URL} rel="home">
                <img
                    src={LOGO_PATH}
                    alt="Manetta Bag office Logo"
                    title={SITE_NAME}
                    loading="eager"
                >
            </a>
        </div>
        <nav class="page-header__nav"></nav>
    </div>
</header>

<style>
    /* src/styles/header.css - Header 模块样式 (绝对定位，透明底，Logo响应式) */

.page-header.full-width-header {
    width: 100%;
    /* 1. 定位：使用绝对定位 */
    position: absolute;
    /* 确保它从页面顶部开始 */
    top: 0;
    left: 0;

    /* 2. 背景：透明和无阴影 */
    background-color: transparent;
    box-shadow: none;

    /* 3. 层级：确保它在 Hero Banner 之上 */
    z-index: 1000;

    /* 基础尺寸和布局 */
    min-height: 80px;
}

.page-header__container {
    display: flex;
    justify-content: flex-start; /* Logo 左对齐 */
    align-items: center;
    width: 100%;
    /* 统一设置内边距，确保 Logo 不贴边 */
    padding: 20px 40px;
    box-sizing: border-box;
}

/* 关键修改：Logo 响应式尺寸控制 */
.page-header__logo img {
    /* 关键 A: 使用 vw 设置宽度，使其响应式缩放 */
    width: 12vw;

    /* 关键 B: 设置最大宽度，防止在超大屏幕上 Logo 过大 */
    max-width: 180px;

    /* 关键 C: 设置最小宽度，防止在移动端 Logo 过小 */
    min-width: 120px;

    height: auto;
    display: block;
}

.page-header__nav {
    /* 导航栏目前隐藏 */
    display: none;
}

/* 移动端调整：缩小 Header 内边距，让 Logo 更贴边 */
@media (max-width: 768px) {
    .page-header__container {
        /* 移动端缩小左右边距 */
        padding: 15px 15px;
    }
}
</style>