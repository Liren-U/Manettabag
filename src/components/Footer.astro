---
// src/components/Footer.astro

const currentYear = new Date().getFullYear();
const siteName = "Manetta Bag";
const siteDomain = "manettabag.com";
---

<footer class="main-footer">
    <div class="footer-container">
        <p class="copyright-text">
            &copy; {currentYear} {siteName}. All Rights Reserved.
            | <a href={`https://${siteDomain}`} target="_blank" rel="noopener noreferrer">{siteDomain}</a>
        </p>

        <div class="footer-links">
            <a href="/privacy">隐私政策</a>
            <span aria-hidden="true">|</span>
            <a href="/terms">服务条款</a>
        </div>
    </div>
</footer>

<style>
.main-footer {
    width: 100%;
    padding: 30px 20px;
    background-color: #333;
    color: #fff;
    text-align: center;
    font-size: 0.9rem;
    line-height: 1.4;
    box-sizing: border-box;

    /* --- 核心修改 --- */
    margin-top: auto; /* 在 Flex 容器中，这会将 Footer 自动推到最底部 */
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
}

.copyright-text a,
.footer-links a {
    color: #ccc;
    transition: color 0.3s ease;
}

.copyright-text a:hover,
.footer-links a:hover {
    color: #fff;
    text-decoration: underline; /* 增加一点交互反馈 */
}

.footer-links {
    display: flex;
    gap: 15px;
}

.footer-links span {
    color: #666;
}

/* 移动端优化 */
@media (max-width: 600px) {
    .main-footer {
        padding: 20px 10px;
    }
    .footer-links {
        flex-direction: column;
        gap: 5px;
    }
    /* 在移动端也可以隐藏原本的分隔符，如果换行了的话 */
    .footer-links span {
        display: none;
    }
}
</style>