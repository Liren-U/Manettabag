---
/**
 * ComparisonSection.astro
 * 
 * 用法示例：
 * <ComparisonSection
 *   title="Comparison"
 *   subtitle="MANETTA triples your storage capacity in seconds, with two built–in cube camera bags that can also be used on their own."
 *   leftImage="/images/comparison/others-22L.png"
 *   leftAlt="Other camera backpack 22L"
 *   rightImage="/images/comparison/manetta-22-12-8L.png"
 *   rightAlt="MANETTA 22L + 12L + 8L"
 * />
 */
const {
  title = 'Comparison',
  subtitle = '',
  leftImage,
  leftAlt = '',
  rightImage,
  rightAlt = '',
} = Astro.props;
---

<section class="comparison-section">
  <div class="comparison-inner">
    <!-- 顶部标题 + 副标题 -->
    <header class="comparison-header">
      <h2 class="comparison-title">{title}</h2>
      {subtitle && (
        <p class="comparison-subtitle">
          {subtitle}
        </p>
      )}
    </header>

    <!-- 下方两列图片容器 -->
    <div class="comparison-grid">
      <div class="comparison-card">
        {leftImage && (
          <img
            src={leftImage}
            alt={leftAlt}
            loading="lazy"
            class="comparison-image"
          />
        )}
      </div>

      <div class="comparison-card">
        {rightImage && (
          <img
            src={rightImage}
            alt={rightAlt}
            loading="lazy"
            class="comparison-image"
          />
        )}
      </div>
    </div>
  </div>
</section>

<style>
  /* 整个 section 全宽 */
  .comparison-section {
    width: 100%;
    padding: 60px 0; /* 上下间距，不含左右 */
  }

  /*
   * 内部容器，控制两种内容：
   * 1. 标题区域
   * 2. 图片 grid
   * 并且根据设备设置外边距
   */
  .comparison-inner {
    width: 100%;
    max-width: 1600px; /* 足够宽保证视觉舒适 */
    margin: 0 auto;

    /* 电脑端左右 64px 外边距 */
    padding: 0 64px;
    box-sizing: border-box;
  }

  /* 顶部标题区域靠右 */
  .comparison-header {
    text-align: right;
    margin-bottom: 40px;
  }

  /* 标题 — 使用你要求的字体与尺寸 */
  .comparison-title {
    text-align: right;
    font-size: clamp(1.8rem, 2.5vw, 2.5rem);
    margin-bottom: 40px;
    color: #333;
    padding: 0 20px;
    font-family: 'Manetta-ElmsSans', sans-serif;
    font-weight: 400;
  }

  /* 副标题靠右，但保持原来字体不变 */
  .comparison-subtitle {
    text-align: right;
    max-width: 760px;
    margin-left: auto;
    font-size: 16px;
    line-height: 1.6;
    color: #444;
    padding: 0 20px;
  }

  /* GRID 两张图 */
  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .comparison-card {
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 24px;
    background: #fff;
  }

  .comparison-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
  }

  /* ========= 平板端 ========= */
  @media (max-width: 1024px) {
    .comparison-inner {
      padding: 0 48px; /* ⭐ 平板端左右 48px */
    }
  }

  /* ========= 手机端 ========= */
  @media (max-width: 768px) {
    .comparison-section {
      padding: 40px 0;
    }

    .comparison-inner {
      padding: 0 24px; /* ⭐ 手机端左右 24px */
    }

    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .comparison-title {
      font-size: clamp(1.6rem, 4vw, 2.2rem);
      margin-bottom: 20px;
    }

    .comparison-subtitle {
      font-size: 14px;
    }
  }
</style>