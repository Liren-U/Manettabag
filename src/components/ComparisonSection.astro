---
/**
 * ComparisonSection.astro
 * 
 * 用法示例：
 * <ComparisonSection
 *   title="Comparison"
 *   subtitle="MANETTA triples your storage capacity in seconds, with two built–in cube camera bags that can also be used on their own."
 *   leftImage="/images/comparison/others-22L.png"
 *   leftAlt="Other camera backpack 22L"
 *   rightImage="/images/comparison/manetta-22-12-8L.png"
 *   rightAlt="MANETTA 22L + 12L + 8L"
 * />
 */
const {
  title = 'Comparison',
  subtitle = '',
  leftImage,
  leftAlt = '',
  rightImage,
  rightAlt = '',
} = Astro.props;
---

<section class="comparison-section">
  <div class="comparison-inner">
    <!-- 顶部标题 + 副标题 -->
    <header class="comparison-header">
      <h2 class="comparison-title">{title}</h2>
      {subtitle && (
        <p class="comparison-subtitle">
          {subtitle}
        </p>
      )}
    </header>

    <!-- 下方两列图片容器 -->
    <div class="comparison-grid">
      <div class="comparison-card">
        {leftImage && (
          <img
            src={leftImage}
            alt={leftAlt}
            loading="lazy"
            class="comparison-image"
          />
        )}
      </div>

      <div class="comparison-card">
        {rightImage && (
          <img
            src={rightImage}
            alt={rightAlt}
            loading="lazy"
            class="comparison-image"
          />
        )}
      </div>
    </div>
  </div>
</section>

<style>
  /* Section 本身全宽 */
  .comparison-section {
    width: 100%;
    padding: 60px 0;
  }

  /* Inner 现在变为完全 full width，不再限制 max-width */
  .comparison-inner {
    width: 100%;
    padding: 0 64px; /* 桌面端左右 */
    box-sizing: border-box;
  }

  /* 顶部标题靠右 */
  .comparison-header {
    text-align: right;
    margin-bottom: 40px;
  }

  .comparison-title {
    text-align: right;
    font-size: clamp(1.8rem, 2.5vw, 2.5rem);
    margin-bottom: 40px;
    padding: 0 20px;
    color: #333;
    font-family: 'Manetta-ElmsSans', sans-serif;
    font-weight: 400;
  }

  .comparison-subtitle {
    text-align: right;
    max-width: 760px;
    margin-left: auto;
    padding: 0 20px;
    font-size: 16px;
    line-height: 1.6;
    color: #444;
  }

  /* Grid */
  .comparison-grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .comparison-card {
    background: #fff;
    padding: 24px;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
  }

  .comparison-image {
    width: 100%;
    display: block;
    object-fit: contain;
  }

  /* 平板端 */
  @media (max-width: 1024px) {
    .comparison-inner {
      padding: 0 48px;
    }
  }

  /* 手机端 */
  @media (max-width: 768px) {
    .comparison-section {
      padding: 40px 0;
    }

    .comparison-inner {
      padding: 0 24px;
    }

    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .comparison-title {
      font-size: clamp(1.6rem, 4vw, 2.2rem);
      margin-bottom: 20px;
    }

    .comparison-subtitle {
      font-size: 14px;
    }
  }
</style>
